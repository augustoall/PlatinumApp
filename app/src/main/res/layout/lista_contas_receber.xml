<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/recconta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="7"
            android:background="@android:color/holo_green_light"
            android:elevation="7dp"
            android:onClick="receberconta"
            android:src="@drawable/receberconta" />

        <TextView
            android:id="@+id/textView14erwerwe"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"

            android:gravity="bottom|center_horizontal"
            android:textSize="9sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/sair"
            android:layout_width="20dp"
            android:layout_height="30dp"

            android:layout_weight="1"
            android:onClick="sair"
            android:src="@drawable/exit" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txvInfoRecCliente"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="10"
            android:gravity="center_horizontal"
            android:paddingBottom="7dp"
            android:paddingLeft="10dp"
            android:paddingTop="7dp"
            android:text="Pedro Paulo dos santos martins"
            android:textColor="@color/verde_destaq"
            android:textSize="12sp"
            android:textStyle="bold"
            android:typeface="monospace" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/data1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"

            android:gravity="bottom|center_horizontal"

            android:paddingLeft="6dp"
            android:text="Data Inicial"
            android:textSize="9sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pesquisa"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"

            android:gravity="bottom|center_horizontal"
            android:textSize="9sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/data2"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="3"

            android:gravity="bottom|center_horizontal"
            android:text="Data Final"
            android:textSize="9sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pesquisa2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="bottom|center_horizontal"

            android:textSize="9sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="2"

            android:gravity="bottom|center_horizontal"
            android:textSize="9sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/rec_btn_datainicial"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:onClick="data1"
            android:src="@drawable/data1"

            />

        <TextView
            android:id="@+id/rec_txt_datainicial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"

            android:text="15/10/2015"
            android:textSize="13dp"

            android:textStyle="bold" />

        <ImageView
            android:id="@+id/rec_btn_datafinal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:onClick="data2"
            android:src="@drawable/data1"

            />

        <TextView
            android:id="@+id/rec_txt_datafinal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:text="15/10/2015"


            android:textSize="13dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/recpesq"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:onClick="pesquisar_titulos"
            android:src="@drawable/search" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/check_titulo_pago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="ver contas pagas   |"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/txv_quantidade_parcelaspagas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="contas pagas : 0"


            android:textStyle="italic" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/RecrgReceber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/RecrbDinheiro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:checked="true"
                android:text="dinheiro"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/RecrbCartao"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="cartÃ£o"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/RecrbCheque"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="cheque"
                android:textStyle="bold" />
        </RadioGroup>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/eerterterdfgdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center_horizontal"
            android:text="pressione uma parcela para ver seus pagamentos"
            android:textColor="#cccccc"
            android:textSize="10sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView17"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_vertical"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:text="parcela"
            android:textColor="#000000"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_vertical"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:text="vencimento"
            android:textColor="#000000"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_vertical"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:text="vl. receber"
            android:textColor="#000000"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_vertical"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:text="vl. pago"
            android:textColor="#000000"
            android:textSize="11sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/chkSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="left"
            android:visibility="invisible" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />
    </LinearLayout>


</LinearLayout>