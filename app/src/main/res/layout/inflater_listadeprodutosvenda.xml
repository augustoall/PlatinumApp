<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vendas_inflaterDescricaoProduto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Coca cola 2 litros"

            android:textColor="#000000"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vendas_inflaterQuantidadeProduto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:height="40dp"
            android:gravity="center_vertical"
            android:text="10.0"
            android:textColor="#000000"

            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vendas_inflaterPrecoProduto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:height="40dp"
            android:gravity="center_vertical|right"
            android:text="10.0"
            android:textColor="#000000"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vendas_inflaterTotalProduto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="40dp"
            android:gravity="center_vertical|right"
            android:paddingRight="5dp"
            android:text="10.0"
            android:textColor="#000000"


            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>