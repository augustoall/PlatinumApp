<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Conteiner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    android:padding="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Data inicial"
            android:textStyle="bold" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Data final"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/txt_listavendas_dataini"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"></android.support.design.widget.TextInputEditText>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txt_listavendas_datafim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"></android.support.design.widget.TextInputEditText>

        <Button
            android:id="@+id/btn_filtrarvendasrealizadas"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/search_venda"
            android:onClick="filtrarvendas"
            android:text="" />


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lista_vendas_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="1200dp"
        android:layout_weight="1"
        android:dividerHeight="1dp">


    </android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/verde_destaq">

        <TextView
            android:id="@+id/txt222"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/verde_destaq"
            android:gravity="center_vertical|center"
            android:paddingRight="5dp"
            android:text=""
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt3333"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/verde_destaq"
            android:gravity="center_vertical|center"
            android:paddingRight="15dp"
            android:text=""

            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txv_listavendas_subtotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/verde_destaq"
            android:gravity="center_vertical|right"
            android:paddingRight="15dp"
            android:text="0.00"
            android:textSize="17sp"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>

